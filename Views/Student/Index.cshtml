@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
<div class="col-6">
        <h2 class="text-primary">Lista studenata</h2>
    </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary">
                Dodaj studenta
            </a>
            </div>
    </div>

</br>
</br>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Datum Rodjenja</th>
            <th>Pol</th>
            <th>Telefon</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.ime
                </td>
                <td>
                    @obj.prezime
                </td>
                <td>
                    @obj.datumRodjenja
                </td>
                <td>
                    @obj.pol
                </td>
                <td>
                    @obj.telefon
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2">Izmijeni</a>
                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2">Obrisi</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

